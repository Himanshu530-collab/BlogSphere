<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
    <style>
        /* Custom styles for Blog cards */
        .card-img-top {
            width: 100%;
            height: 200px; /* Fix image height */
            object-fit: cover; /* Ensure the image covers the area without distortion */
        }

        .card-body {
            padding: 15px;
        }

        .card-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
            text-align: center;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis; /* Truncate title if it's too long */
        }

        .card-text {
            font-size: 14px;
            color: #555;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 3; /* Show 3 lines of text and truncate the rest */
            -webkit-box-orient: vertical;
            margin-bottom: 15px;
        }

        .btn-primary {
            font-size: 12px; /* Smaller "View" button */
            padding: 5px 10px; /* Adjust padding to make the button smaller */
        }

        .btn-warning,
        .btn-danger {
            font-size: 12px;
            padding: 5px 10px;
        }

        /* Button container: Flexbox to align buttons in a line */
        .button-container {
            display: flex;
            justify-content: space-between; /* Space out the buttons */
            align-items: center;
        }

        .btn-container-primary {
            width: 100%; /* For the "View" button to be bigger when other buttons are not present */
        }

        /* Ensure blogs are displayed in a responsive grid layout */
        /* This is handled via Bootstrap classes now, so no need for custom media queries */
    </style>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt-3">
        <h1>Welcome to the Homepage!</h1>

        <% if (!user) { %>
            <p>Please sign in to view your profile.</p>
        <% } else { %>
            <h3>Latest Blogs</h3>
            <div class="row">
                <% blogs.forEach(blog => { %>
                    <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-3"> <!-- Bootstrap grid system for responsive columns -->
                        <div class="card">
                            <img src="<%= blog.coverImageURL || '/images/default.png' %>" class="card-img-top" alt="Blog Image">
                            <div class="card-body">
                                <h5 class="card-title"><%= blog.title %></h5>
                                <p class="card-text"><%= blog.body.slice(0, 100) %>...</p>
                                
                                <div class="button-container">
                                    <!-- View button -->
                                    <a href="/blog/<%= blog._id %>" class="btn btn-primary btn-container-primary">View</a>
                                    
                                    <!-- Edit and Delete links, only visible to the blog creator -->
                                    <% if (user && blog.createdBy._id.toString() === user._id.toString()) { %>
                                        <div class="button-container">
                                            <a href="/blog/edit/<%= blog._id %>" class="btn btn-warning">Edit Blog</a>
                                            <form action="/blog/delete/<%= blog._id %>" method="POST" style="display:inline;">
                                                <button type="submit" class="btn btn-danger">Delete Blog</button>
                                            </form>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    <%- include('./partials/scripts') %>
</body>
</html>
