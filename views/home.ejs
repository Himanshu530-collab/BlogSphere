<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
    <style>
        /* Ensure all blog cards have the same height and proper layout */
        .card {
            display: flex;
            flex-direction: column;
            height: 100%;
            overflow: hidden;
        }

        .card-img-top {
            width: 100%;
            height: 200px; /* Fix image height */
            object-fit: cover; /* Ensure the image covers the area without distortion */
        }

        .card-body {
            flex: 1; /* Ensures that body content takes up the available space */
        }

        .card-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
            text-align: center;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis; /* Truncate title if it's too long */
        }

        .card-text {
            font-size: 14px;
            color: #555;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 3; /* Show 3 lines of text and truncate the rest */
            -webkit-box-orient: vertical;
        }

        .btn-primary {
            width: 100%;
        }

        /* Responsive layout */
        @media (max-width: 768px) {
            .card-img-top {
                height: 150px; /* Smaller images on mobile */
            }
            .card-title {
                font-size: 16px; /* Adjust title size for small screens */
            }
            .card-text {
                font-size: 13px; /* Adjust text size for small screens */
            }
        }
    </style>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt-3">
        <h1>Welcome to the Homepage!</h1>

        <% if (!user) { %>
            <p>Please sign in to view your profile.</p>
        <% } else { %>
            <h3>Latest Blogs</h3>
            <div class="row">
                <% blogs.forEach(blog => { %>
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <img src="<%= blog.coverImageURL || '/images/default.png' %>" class="card-img-top" alt="Blog Image">
                            <div class="card-body">
                                <h5 class="card-title"><%= blog.title %></h5>
                                <p class="card-text"><%= blog.body.slice(0, 100) %>...</p>
                                <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read More</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    <%- include('./partials/scripts') %>
</body>
</html>
