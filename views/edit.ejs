<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Edit Blog</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-header text-center font-weight-bold">
                Edit Blog: <%= blog.title %>
            </div>
            <div class="card-body">
                <!-- Edit Form -->
                <form action="/blog/edit/<%= blog._id %>" method="POST" enctype="multipart/form-data" onsubmit="return confirmEdit()">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" name="title" value="<%= blog.title %>" required>
                    </div>
                    <div class="form-group">
                        <label for="body">Body</label>
                        <textarea class="form-control" id="body" name="body" rows="5" required><%= blog.body %></textarea>
                    </div>
                    <div class="form-group">
                        <label for="coverImage">Cover Image (Optional)</label>
                        <input type="file" class="form-control-file" id="coverImage" name="coverImage">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
                </form>
            </div>
        </div>

        <!-- Display current image -->
        <% if (blog.coverImageURL) { %>
            <div class="mt-3">
                <p>Current Image:</p>
                <img src="<%= blog.coverImageURL %>" class="img-fluid rounded" alt="Current Cover Image">
            </div>
        <% } %>

        <!-- Back to Blog Button -->
        <a href="/blog/<%= blog._id %>" class="btn btn-secondary mt-3">Back to Blog</a>
    </div>

    <script>
        function confirmEdit() {
            return confirm("Are you sure you want to save changes to this blog?");
        }
    </script>

    <%- include('./partials/scripts') %>
</body>
</html>
